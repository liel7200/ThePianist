<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context="com.example.liel.thepianist.Home">

    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:id="@+id/sheets"
        android:text="learn sheets"/>
    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:id="@+id/keyboard"
        android:text="learn keyboard"
        />
    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:id="@+id/together"
        android:text="learn together"
        />
    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:id="@+id/justPlay"
        android:text="just Play"
        />
    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:id="@+id/forKids"
        android:text="For Kids"
        />
</LinearLayout>
